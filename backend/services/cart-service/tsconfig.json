{
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src", // Base URL for module resolution
    "paths": {
      "@middleware/*": ["../../middleware/*"] // Alias for shared middleware
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}